@model IEnumerable<Homeworkapp.Models.Zjazd>

@{
    ViewBag.Title = "Edytor zjazdów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytor zjazdów</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dzien1)          
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dzien2)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numer)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Dzien1)*@
            @String.Format("{0:d}", item.Dzien1)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Dzien2)*@
            @String.Format("{0:d}", item.Dzien2)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ZjazdID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ZjazdID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ZjazdID })
        </td>
    </tr>
}

</table>
